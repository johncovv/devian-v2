{
	"compilerOptions": {
		"target": "ES2016",
		"lib": ["ES2022"],
		"types": ["node"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/.*.ts"],
	"exclude": ["node_modules"]
}
